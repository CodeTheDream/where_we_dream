<div id="comments">
  <% @comments.each do |comment| %>
    <div class="comment-thread">
      <div id="<%= comment.id %>" class="comment">
        <a href="#" class="comment-area"><span class="click-area"></span></a>
        <div class="comment-images user-image left">
          <%= link_to user_path(comment.user.id) do %>
            <%= image_tag comment.user.image.url(:thumb) %>
          <% end %>
        </div>
        <div class="comment-content">
          <span class="dropdown">
            <span class="dropdown-container">
              <i class="fa fa-caret-square-o-down dropdown-button"></i>
              <ul class="dropdown-menu dropdown-select">
                <% if owner?(comment) %>
                  <li>Edit</li>
                  <li>Remove this comment</li>
                <% else %>
                  <li>Report spam or abuse</li>
                <% end %>
              </ul>
            </span>
          </span>
          <strong>
            <%= link_to comment.user.first_name, user_path(comment.user.id), class: 'comment-name' %>
          </strong>
          <span class="time"><%= created_at(comment) %></span>
          <br/>
          <%= comment.content %>
          <br/>
          <%# make the thumbs up stuff into a link_to inside the appHelper %>
          <div class="pre-wrap"><span comment-id="<%= comment.id %>" class="small reply">Reply</span>   ·   <span class="likes hide"><%= comment.likes.count + 1 %>   </span><a class="fa fa-thumbs-up opinion"></a>   <i class="fa fa-thumbs-down opinion"></i></div>
        </div>
      </div>
      <% comment.replies.each do |reply| %>
        <div class="comment">
          <a href="#" class="comment-area"><span class="click-area"></span></a>
          <div class="comment-images left reply-spacing reply-image">
            <%= link_to user_path(reply.user.id) do %>
              <%= image_tag reply.user.image.url(:thumb) %>
            <% end %>
          </div>
          <div class="comment-content reply-spacing">
            <span class="dropdown">
              <span class="dropdown-container">
                <i class="fa fa-caret-square-o-down dropdown-button"></i>
                <ul class="dropdown-menu dropdown-select">
                  <% if owner?(reply) %>
                    <li>Edit</li>
                    <li>Remove this comment</li>
                  <% else %>
                    <li>Report spam or abuse</li>
                  <% end %>
                </ul>
              </span>
            </span>
            <strong>
              <%= link_to reply.user.first_name, user_path(reply.user.id), class: 'comment-name' %>
            </strong>
            <span class="time"><%= created_at(reply) %></span>
            <br/>
            <%= reply.content %>
            <br/>
            <div class="pre-wrap"><span comment-id="<%= comment.id %>" class="small reply">Reply</span>   ·   <i class="fa fa-thumbs-up opinion"></i>   <i class="fa fa-thumbs-down opinion"></i></div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= link_to "All comments",  school_comments_path(@school) %>
</div>
