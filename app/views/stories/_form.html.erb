<%= form_for @story do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :user_id, value: user_id %>
  <div class="field">
    <%= f.label :anonymous, 'Anonymous?' %><br>
    <%= f.check_box :anonymous %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, rows: 10 %>
  </div>
  <div class="actions">
    <%= f.submit 'Preview', class: 'blue-button preview' %>
    <%= f.submit class: 'blue-button' %>
  </div>
<% end %>
