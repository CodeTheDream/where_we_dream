<div class="flex-container">
  <h1><%= title "Stories" %></h1>
  <% if logged_in? %>
    <%= link_to new_story_path, class: 'flex-right' do %>
      <i class="fa fa-plus"></i> New Story
    <% end %>
  <% end %>
</div>

<%= render 'layouts/search', path: schools_path, placeholder: 'Search stories' %>

<table class="pretty">
  <thead>
    <tr>
      <th><%= sortable "updated_at", "Published" %></th>
      <th><%= sortable "title" %></th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr data-href="<%= story_path(story) %>" class="tr-content">
        <td><%= updated_at story %></td>
        <td><%= story.title %></td>
        <td><%= story.author %></td>
      </tr>
    <% end %>
  </tbody>
</table>
