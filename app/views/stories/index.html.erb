<div class="flex-container">
  <h1><%= title "Stories" %></h1>
  <% if logged_in? %>
    <%= link_to new_story_path, class: 'flex-right' do %>
      <i class="fa fa-plus"></i> New Story
    <% end %>
  <% end %>
</div>

<%= render 'layouts/search', path: schools_path, placeholder: 'Search stories' %>

<% @stories.each do |story| %>
  <%= render "brief", story: story %>
<% end %>

<%= paginate @stories %>
