<div class="flex-container">
  <h1><%= title 'Scholarships' %></h1>

  <% if recruiter_or_above? %>
    <%= link_to new_scholarship_path, class: 'flex-right' do %>
      <i class="fa fa-plus"></i> <%= desktop_only "Add Scholarship" %>
    <% end %>
  <% end %>
</div>

<%= render 'layouts/search', path: scholarships_path, placeholder: 'Search scholarships' %>

<%= page_entries_info @scholarships %>, <b><%= @open.count %></b> open

<table class="pretty">
  <thead>
    <tr>
      <th class="min-width"><%= sortable "deadline" %></th>
      <th><%= sortable "name" %></th>
      <th class="min-width"><%= sortable "amount" %></th>
    </tr>
  </thead>

  <tbody>
    <% @scholarships.each do |scholarship| %>
      <tr data-href="<%= scholarship_path(scholarship) %>"  class="tr-content">
        <td class="pre-wrap"> <%= deadline_icon scholarship.deadline %>  <%= simple_date scholarship.deadline %></td>
        <td><%= scholarship.name %></td>
        <td><%= reward scholarship %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @scholarships %>
