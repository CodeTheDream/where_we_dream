<% correct_path = @state.id ? admin_state_path(@state) : admin_states_path %>

<%= form_for(@state, url: correct_path) do |f| %>
  <% if @state.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@state.errors.count, "error") %> prohibited this state from being saved:</h2>

      <ul>
      <% @state.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% unless request.path.include? "edit" %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.select :name, options_for_select(State.names_left), include_blank: "-- choose one --" %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :in_state %><br>
    <%= f.radio_button :in_state, true %> yes
    <%= f.radio_button :in_state, false %> no
    <%= f.radio_button :in_state, '' %> idk
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Full Markdown" %>
  </div>
  <div class="actions">
    <%= f.submit class: "button" %>
  </div>
<% end %>
