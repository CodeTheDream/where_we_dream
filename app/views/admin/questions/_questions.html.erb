<div id="questions">
  <% @questions.each do |question| %>
    <div>
      <span>
        <% if god? %>
          <%= link_to admin_question_path(question), method: :delete, remote: true, class: 'destroy-button', data: {confirm: "Are you sure you wanna delete this question?"} do %>
            <i class="fa fa-trash-o"></i>
          <% end %>
        <% end %>
        <%= text_area_tag 'question', question.value, class: 'edit-question', id: question.id %>
      </span>
    </div>
  <% end %>
</div>
