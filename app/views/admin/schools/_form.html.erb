<% correct_path = @school.id ? admin_school_path(@school) : admin_schools_path %>
<%# @school.name.nil? ? correct_path = admin_school_path(@school) : correct_path = admin_schools_path %>

<%= form_for(@school, url: correct_path) do |f| %>
  <% if @school.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@school.errors.count, "error") %> prohibited this school from being saved:</h2>

      <ul>
      <% @school.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name do %>
      Name<span class="red">*</span>
    <% end %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :link, "URL (http://www.example.com/)" %><br>
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :rating %>
    <%= f.select :rating, options_for_select({A: 1, B: 2, C: 3, D: 4, F: 5, "INC" => 6}, @school.rating.to_i) %>
  </div>
  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.select :state, options_for_select(@states, "NC") %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :students %><br>
    <%= f.number_field :students %>
  </div>
  <div class="field">
    <%= f.label :undocumented_students %><br>
    <%= f.number_field :undocumented_students %>
  </div>
  <div class="field">
    <%= f.label :public %><br>
    <%= f.check_box :public %>
  </div>
  <%= f.fields_for :rules do |ff| %>
    <div class="rule">
      <%= ff.object.question! %><br>
      <%= ff.radio_button :answer, true %> yes
      <%= ff.radio_button :answer, false %> no
      <%= ff.radio_button :answer, '' %> idk
      <div class='details-container'>
        <%= ff.text_area :details, class: 'details', placeholder: 'Additional Information' %>
      </div>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit class: "blue-button" %>
  </div>
<% end %>
