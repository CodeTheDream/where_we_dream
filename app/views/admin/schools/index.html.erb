<h1 style="display:inline">All Schools</h1>
<%= link_to 'New School', new_admin_school_path, style: 'float:right;' %>

<table>
  <thead>
    <tr>
      <th colspan='1'></th>
      <th>Name</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% number = 0 %>
    <% @schools.each do |school| %>
      <tr>
        <td><%= number += 1 %></td>
        <td><%= school.name %></td>
        <td><%= link_to 'Show', admin_school_path(school) %></td>
        <td><%= link_to 'Edit', edit_admin_school_path(school) %></td>
        <td><%= link_to 'Destroy', admin_school_path(school), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>
<%= link_to 'Back', :back %>
