<h1 style="display:inline">All Schools</h1>
<%= link_to new_admin_school_path, class: 'blue-link right' do %>
  <i class="fa fa-plus"></i> Add School
<% end %>
<%= render 'layouts/search', path: admin_schools_path, placeholder: 'Search schools' %>

<table class="pretty">
  <thead>
    <tr>
      <th colspan='1'>#</th>
      <th><%= sortable "complete", "Info" %></th>
      <th><%= sortable "rating" %></th>
      <th><%= sortable "name" %></th>
      <th><%= sortable "public" %></th>
      <th><%= sortable "city" %></th>
    </tr>
  </thead>

  <tbody>
    <% number = 0 %>
    <% @schools.each do |school| %>
      <tr  data-href="/admin/schools/<%= school.id %>" class="tr-content">
        <td><%= number += 1 %></td>
        <td><%= school.complete? ? "âœ“" : "INC" %></td>
        <td><%= school.rating.round %>%</td>
        <td><%= school.name %></td>
        <td><%= school.public? %></td>
        <td><%= school.city %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to :back, class: "blue-link" do %>
  <i class="fa fa-arrow-left"></i> Back
<% end %>
