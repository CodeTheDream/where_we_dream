<h1>All Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= link_to 'Show', admin_school_path(school) %></td>
        <td><%= link_to 'Edit', edit_admin_school_path(school) %></td>
        <td><%= link_to 'Destroy', admin_school_path(school), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_admin_school_path %>
