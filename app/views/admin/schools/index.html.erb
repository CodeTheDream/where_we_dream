<div class="flex-container">
  <h1><%= title "Admin: Schools" %></h1>
  <%= link_to new_admin_school_path, class: 'flex-right' do %>
    <i class="fa fa-plus"></i> Add School
  <% end %>
</div>

<%= render 'layouts/search', path: admin_schools_path, placeholder: 'Search schools' %>

<table class="pretty">
  <thead>
    <tr>
      <th class="min-width desktop-only" colspan='1'>#</th>
      <th class="min-width"><%= sortable "complete", "Info" %></th>
      <th class="min-width"><%= sortable "rating" %></th>
      <th><%= sortable "name" %></th>
      <th><%= sortable "city" %></th>
    </tr>
  </thead>

  <tbody>
    <% number = 0 %>
    <% @schools.each do |school| %>
      <tr data-href="/admin/schools/<%= school.id %>" class="tr-content">
        <td class="desktop-only"><%= number += 1 %></td>
        <td class="center">
          <%= school.complete? ? "<span class='bolder'>âœ“</span>".html_safe : "INC" %>
        </td>
        <td class="center"><%= school.rating! %></td>
        <td>
          <%= school.name %>
          <% if school.public %>
            <i class="fa fa-unlock public"></i>
          <% else %>
            <i class="fa fa-lock private"></i>
          <% end %>
        </td>
        <td><%= school.city %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= back %>
