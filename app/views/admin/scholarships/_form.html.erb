<% correct_path = @scholarship.id ? admin_scholarship_path(@scholarship) : admin_scholarships_path %>
<%= form_for(@scholarship, url: correct_path) do |f| %>
  <% if @scholarship.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scholarship.errors.count, "error") %> prohibited this scholarship from being saved:</h2>

      <ul>
      <% @scholarship.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: "Example Opportunity Scholarship Name" %>
  </div>
  <div class="field">
    <%= f.label :link, "URL" %><br>
    <%= f.text_field :link, placeholder: "http://www.example.com/" %>
  </div>
  <div class="field">
    <%= f.check_box :full_ride %>
    <%= f.label :full_ride, "Check the box if this scholarship is a full ride" %><br>
  </div>
  <div class="field">
    <%= f.label :amount, "Amount in dollars (no dollar signs or commas)" %><br>
    <%= f.number_field :amount, min: 1, placeholder: "ex: 5000000" %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.datetime_select :deadline, {ampm:true}, class: 'initial-width' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Remember that this information can handle all the markdown you write" %>
  </div>
  <div class="field">
    <%= f.label :requirements %><br>
    <%= f.text_area :requirements, placeholder: "Full markdown capable" %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: 'blue-button' %>
  </div>
<% end %>
