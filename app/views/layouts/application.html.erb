<!DOCTYPE html>
<html>
<head>
  <%= display_meta_tags %>
  <%= favicon_link_tag asset_url('graduation_cap.png') %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/header' %>
  <%= render 'layouts/cover' if @page == 'home' %>
  <div id='body'>
    <% if notice.present? %>
      <%= notice_helper %>
    <% end %>
    <%= yield %>
  </div>
  <%= render 'layouts/footer' %>
</body>
</html>
