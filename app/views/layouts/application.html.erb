<!DOCTYPE html>
<html>
<head>
  <%= display_meta_tags %>
  <meta name="viewport" content="initial-scale=1">
  <%= favicon_link_tag asset_url('graduation_cap.png') %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/header' %>
  <%= render 'layouts/cover' if @page == 'home' %>
  <% if @page == 'Log In' %>
    <%= yield %>
  <% else %>
    <div id='body'>
      <%= yield %>
    </div>
  <% end %>
  <%= render 'layouts/footer' %>
</body>
</html>
