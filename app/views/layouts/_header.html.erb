<% if ['home', 'Log In'].include? @page %>
  <style>
    header {
      background-image: none;
    }
    header.navigation ul li.nav-link {
      color: #2e2f33;
    }
  </style>
<% end %>
<% if @page == 'Log In' %>
  <style>
    #body {
      padding: 0;
    }
  </style>
<% end %>
<header class="navigation" role="banner">
  <div id="header-wrapper" class="navigation-wrapper">
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <li id="home" class="nav-link">
          <%= link_to root_path do %>
            <span class="fa-stack">
              <i id="logo" class="fa fa-graduation-cap fa-stack-1x logo"></i>
            </span>
            <%= desktop_only "Where We DREAM" %>
          <% end %>
        </li>
        <li id="features" class="nav-link">
          <span class="fa-stack">
            <i class="fa fa-circle-thin fa-stack-2x"></i>
            <i class="fa fa-bars fa-stack-1x"></i>
          </span>
          <%= desktop_only "Features" %>
        </li>
        <% if recruiter_or_above? %>
          <li id="admin" class="nav-link">
            <span class="fa-stack">
              <i class="fa fa-expeditedssl fa-stack-2x"></i>
            </span>
            <%= desktop_only user_type %>
          </li>
        <% end %>
        <% unless logged_in? %>
          <li id="login" class="nav-link">
            <a href="/login" class="login">
              <span class="fa-stack">
                <i class="fa fa-circle-thin fa-stack-2x"></i>
                <i class="fa fa-user-plus fa-stack-1x" style="padding-left:.1em;"></i>
              </span>
              <%= desktop_only "Log In" %>
            </a>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
  <nav id="mobile-nav">
    <div id="nav-features">
      <div class="feature">
        <%= click_area schools_path %>
        <h3>Schools</h3>
        <p>Browse through our <%= pluralize School.count, "school" %></p>
      </div>
      <div class="feature">
        <%= click_area scholarships_path %>
        <h3>Scholarships</h3>
        <p>Browse through our <%= pluralize Scholarship.count, "scholarship" %></p>
      </div>
      <div class="feature">
        <%= click_area states_path %>
        <h3>States</h3>
        <p>Browse through our <%= pluralize State.count, "state" %>
      </div>
      <div class="feature">
        <%= click_area stories_path %>
        <h3>Stories</h3>
        <p>Browse through our <%= pluralize Story.count, "story" %></p>
      </div>
      <% if false %>
        <div class="feature">
          <a href="javascript:void(0)"><span class="click-area"></span></a>
          <h3>Sponsors</h3>
          <p>Coming soon!</p>
          <!-- <p>Browse through our '20' sponsors</p> -->
        </div>
        <div class="feature">
          <%= click_area students_path %>
          <h3>Students</h3>
          <p>Browse through our <%= pluralize User.students.count, "student" %></p>
        </div>
      <% end %>
    </div>
    <div id="nav-admin">
      <div class="feature">
        <%= click_area admin_schools_path %>
        <h3>Schools</h3>
        <p>Edit schools</p>
      </div>
      <div class="feature">
        <%= click_area admin_scholarships_path %>
        <h3>Scholarships</h3>
        <p>Edit scholarships</p>
      </div>
      <% if admin_or_above? %>
        <div class="feature">
          <%= click_area admin_states_path %>
          <h3>States</h3>
          <p>Edit states</p>
        </div>
      <% end %>
      <% if god? %>
        <div class="feature">
          <%= click_area admin_questions_path %>
          <h3>Questions</h3>
          <p>Edit questions</p>
        </div>
      <% end %>
      <div class="feature">
        <%= click_area admin_users_path %>
        <h3>Users</h3>
        <p><%= pluralize User.count, "user" %></p>
      </div>
    </div>
  </nav>
  <%= notice_helper if notice.present? %>
</header>
